###> symfony/framework-bundle ###
APP_ENV=prod
APP_SECRET=your_app_secret_here_min_32_chars
###< symfony/framework-bundle ###

###> doctrine/doctrine-bundle ###
# Railway PostgreSQL - Use the DATABASE_URL provided by Railway
DATABASE_URL="postgresql://user:password@host:5432/railway?serverVersion=15&charset=utf8"
###< doctrine/doctrine-bundle ###

###> lexik/jwt-authentication-bundle ###
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=your_jwt_passphrase_here
###< lexik/jwt-authentication-bundle ###

###> nelmio/cors-bundle ###
# Set to your frontend Railway URL
CORS_ALLOW_ORIGIN='^https://your-frontend\.up\.railway\.app$'
###< nelmio/cors-bundle ###
